<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>นักพากย์</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="shortcut icon" href="/logo/favicon.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('../../../Component/Header') %>
    <%- include('../../../Component/Sidebar') %>

    <div class="mx-auto xl:max-w-7xl py-8">
        <h1 class="text-3xl font-bold text-center mb-8">เพิ่มตัวละครใหม่</h1>

        <!-- Form เพิ่มตัวละคร -->
        <div class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
            <div class="mb-6 mt-4">
                <% if (typeof message !== 'undefined') { %>
                    <div class="mb-4 bg-gray-100 rounded-lg p-2 text-green-500 text-center"><%= message %></div>
                <% } %>
                <div id="message" class="message mb-4 bg-gray-100 rounded-lg p-2 text-green-500 text-center" style="display: none;"></div>
                <div id="errormessage" class="errormessage mb-4 bg-gray-100 rounded-lg p-2 text-red-500 text-center" style="display: none;"></div>
                <% if (typeof error !== 'undefined') { %>
                    <div class="mb-4 bg-gray-100 rounded-lg p-2 text-red-500 text-center"><%= error %></div>
                <% } %>
            </div>
            <form action="/admin/edit/anime/voice/actor" method="post" enctype="multipart/form-data">
                <input type="text" name="animeId" value="<%= anime._id %>" class="w-full p-3 border rounded-lg" readonly>
                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2" for="characterId">เลือกตัวละคร:</label>
                    <select name="characterId" class="w-full p-3 border rounded-lg" required>
                        <option value="">-- กรุณาเลือกตัวละคร --</option>
                        <% if (anime.characters && anime.characters.length > 0) { %>
                            <% anime.characters.forEach(character => { %>
                                <option value="<%= character._id %>"><%= character.name %></option>
                            <% }); %>
                        <% } else { %>
                            <option value="" disabled>ไม่มีตัวละคร</option>
                        <% } %>
                    </select>
                    
                </div>
              
                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2" for="actorName">ชื่อ:</label>
                    <input type="text" name="actorName" class="w-full p-3 border rounded-lg" placeholder="กรอกชื่อตัวละคร" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2" for="actorRole">บทบาท:</label>
                    <input type="text" name="actorRole" class="w-full p-3 border rounded-lg" placeholder="เช่น ตัวเอก, ตัวร้าย">
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2" for="image">ลิงก์รูปภาพ:</label>
                    <input type="file" name="image" class="w-full p-3 border rounded-lg" placeholder="กรอก URL ของรูปภาพ" required>
                </div>
                <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600">เพิ่มตัวละคร</button>
            </form>
        </div>

    </div>


    <script src="/js/script.js" defer></script>
</body>
</html>