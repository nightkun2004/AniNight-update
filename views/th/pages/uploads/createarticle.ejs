    <script>
        document.getElementById("title").addEventListener("input", function () {
            const previewTitles = document.querySelectorAll(".previewTitle"); 
            previewTitles.forEach(previewTitle => {
                previewTitle.textContent = this.value || "ตัวอย่างชื่อโพสต์"; 
            });
        });


        function closePopup(id) {
            const popup = document.getElementById(id); // ใช้ id ที่ส่งเข้ามา
            popup.classList.add('hidden'); // เพิ่ม hidden เพื่อซ่อน
        }

        function openDemoArticle(id) {
            const popup = document.getElementById(id); // ใช้ id ที่ส่งเข้ามา
            popup.classList.remove('hidden'); // ลบ hidden เพื่อแสดง popup
        }


        function previewImage(input) {
            const file = input.files[0];
            const previewThumbnail = document.getElementById("previewThumbnail");

            if (file) {
                const reader = new FileReader();

                // โหลดภาพและตั้งค่า src ของ <img> ให้เป็นภาพที่เลือก
                reader.onload = function (e) {
                    previewThumbnail.src = e.target.result;
                }

                reader.readAsDataURL(file);
            } else {
                // ถ้าไม่มีไฟล์ ให้เคลียร์ src ของ <img>
                previewThumbnail.src = "";
            }
        }


        function togglePublishStatus() {
            const checkbox = document.getElementById("published");
            const previewStats = document.getElementById("previewStats");

            if (checkbox.checked) {
                previewStats.textContent = "กำลังเผยแพร่";
            } else {
                previewStats.textContent = "รอการเผยแพร่";
            }
        }

        const form = document.getElementById("AddArticle");
        const progressBar = document.getElementById('progressBar');
        const statusText = document.getElementById('statusText');

        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const formData = new FormData(form);
            const xhr = new XMLHttpRequest();

            xhr.open('POST', form.action, true);

            // ติดตามความก้าวหน้า
            xhr.upload.onprogress = (event) => {
                if (event.lengthComputable) {
                    const percent = Math.round((event.loaded * 100) / event.total);
                    const progressPercent = percent < 90 ? percent : 90;
                    progressBar.style.width = progressPercent + '%';
                    statusText.textContent = `กำลังอัปโหลด... ${progressPercent}%`;
                }
            };

            xhr.onload = () => {
                if (xhr.status >= 200 && xhr.status < 300) {
                    try {
                        const response = JSON.parse(xhr.responseText);
                        if (response && response.status === 'ok') {
                            progressBar.style.width = '90%';
                            statusText.textContent = 'การอัปโหลดกำลังเริ่มต้น...';

                            // รอ 1 วินาทีก่อนขึ้น 100%
                            setTimeout(() => {
                                progressBar.style.width = '100%';
                                statusText.innerHTML = `<i class="fas fa-check-circle text-green-500"></i> อัปโหลดเสร็จสมบูรณ์! "${response.msg}"`; // เปลี่ยนเป็น HTML พร้อมสี

                                const previewStats = document.getElementById("previewStats");
                                if (response.Articlesave.published === true) {
                                    previewStats.innerHTML = `<i class="fas fa-check text-green-500"></i> เผยแพร่แล้ว`;
                                } else {
                                    previewStats.innerHTML = `<i class="fas fa-times text-red-500"></i> ยังไม่ได้เผยแพร่`; // เพิ่มสีแดง
                                }

                                if (response.Articlesave.scheduledAt) {
                                    previewStats.innerHTML += `<br><i class="fas fa-check text-green-500"></i> ตั้งเวลาเผยแพร่ไว้`;
                                } else {
                                    previewStats.innerHTML += `<br><i class="fas fa-times text-red-500"></i> ไม่มีการตั้งเวลาเผยแพร่`;
                                }

                            }, 5000);

                        } else {
                            // แสดงข้อผิดพลาดจากเซิร์ฟเวอร์
                            statusText.innerHTML = `<i class="fas fa-exclamation-triangle text-yellow-500"></i> เกิดข้อผิดพลาด: ${response.msg || 'ไม่ทราบข้อผิดพลาด'}`; // เปลี่ยนเป็น HTML พร้อมสี
                        }
                    } catch (e) {
                        console.error('Error parsing server response:', e);
                        statusText.innerHTML = `<i class="fas fa-exclamation-triangle text-red-500"></i> เกิดข้อผิดพลาดในการประมวลผลข้อมูลที่ตอบกลับจากเซิร์ฟเวอร์`; // เปลี่ยนเป็น HTML พร้อมสี
                    }
                } else {
                    console.error('Upload failed:', xhr.statusText || 'Unknown error');
                    statusText.innerHTML = `<i class="fas fa-exclamation-triangle text-red-500"></i> การส่งล้มเหลว: ${xhr.statusText || 'ไม่ทราบข้อผิดพลาด'}`; // เปลี่ยนเป็น HTML พร้อมสี
                }
            };

            xhr.onerror = () => {
                console.error('Upload failed:', xhr.statusText || 'Unknown error');
                statusText.innerHTML = `<i class="fas fa-exclamation-triangle text-red-500"></i> การอัปโหลดหรือส่งล้มเหลว: ${xhr.statusText || 'ไม่ทราบข้อผิดพลาด'}`; // เปลี่ยนเป็น HTML พร้อมสี
            };

            // ส่งข้อมูลฟอร์ม
            xhr.send(formData);
        });



