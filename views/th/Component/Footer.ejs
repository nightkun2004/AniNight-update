<script>
  // Function to show the cookie consent popup
  function showCookiePopup() {
    const consentGiven = localStorage.getItem('cookieConsent');
    if (!consentGiven) {
      document.getElementById('cookie-popup').classList.remove('hidden');
    }
  }

  // Function to accept cookies and store the choice in localStorage
  function acceptCookies() {
    localStorage.setItem('cookieConsent', 'accepted');
    document.getElementById('cookie-popup').classList.add('hidden');
  }

  // Function to decline cookies and store the choice in localStorage
  function declineCookies() {
    localStorage.setItem('cookieConsent', 'declined');
    document.getElementById('cookie-popup').classList.add('hidden');
  }

  window.onload = showCookiePopup;
</script>