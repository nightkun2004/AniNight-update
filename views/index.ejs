<body>
    <%- include('./Component/Sidebar') %>
    <div class="flex-1 flex flex-col">
        <%- include('./Component/Header') %>

        <main class="max-w-3xl sm:max-w-4xl md:max-w-5xl lg:max-w-7xl mx-auto mt-3">
            <div class="mb-6 mt-4">
                <% if (typeof error !== 'undefined') { %>
                    <div class="mb-4 bg-gray-100 rounded-lg p-2 text-emerald-500 text-center"><%= error %></div>
                <% } %>
            </div>
            <div
                class="ads-container my-8 p-4 bg-gray-50 rounded-lg shadow-md border border-gray-200 aspect-w-16 aspect-h-9">
                <!-- Ads Home -->
                <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6579807593228261"
                    crossorigin="anonymous"></script>
                <!-- Ani Night -->
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-6579807593228261" data-ad-slot="9626337250"
                    data-ad-format="auto" data-full-width-responsive="true"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
            <h3 class="text-2xl font-medium border-l-4 border-sky-500 pl-5 mb-5 mt-6">มาใหม่</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                <% if (Posts.length > 0) { %>
                    <% Posts.forEach(post => { %>
                        <% if (post.published) { %>
                            <article class="bg-white shadow-lg md:rounded-lg overflow-hidden">
                                <a href="/read/<%= post.urlslug %>">
                                    <img src="/uploads/thumbnails/<%= post.thumbnail %>" alt="<%= post.title %>" class="w-full h-60 object-cover md:h-48">
                                </a>
                                <div class="p-6 md:col-span-1">
                                    <h1 class="text-2xl font-semibold text-gray-900 mb-4">
                                        <a href="/read/<%= post.urlslug %>" class="hover:text-blue-500"><%= post.title %></a>
                                    </h1>
                                    <% if (post.creator && post.creator.id) { %>
                                        <div class="flex items-center space-x-4">
                                            <img src="/uploads/profiles/<%= post.creator.profilePicture %>" alt="<%= post.creator.username %>" class="w-12 h-12 rounded-full border border-gray-300">
                                            <p class="text-gray-700"><%= post.creator.username %></p>
                                        </div>
                                    <% } %>
                                </div>
                            </article>
                        <% } %>
                    <% }) %>  
                    <% } else { %>
                    <p>ยังไม่ได้เขียนบทความ</p>
                    <% } %>
            </div>


            <h3 class="text-2xl font-medium border-l-4 border-sky-500 pl-5 mb-5 mt-6">แนะนำบทความที่มาแรงจาก 5 รายการ</h3>
