    <script>
        const scrollContainer = document.querySelector('.anime-list-nextseason');
        const scrollLeft = document.getElementById('scroll-left');
        const scrollRight = document.getElementById('scroll-right');

        // Width of one card plus gap (200px card + 16px gap * 4)
        const cardWidth = 200;
        const gap = 16;
        const itemsToShow = 5;
        const scrollAmount = (cardWidth + gap) * itemsToShow;

        scrollLeft.addEventListener('click', () => {
            scrollContainer.scrollBy({
                left: -scrollAmount,
                behavior: 'smooth'
            });
        });

        scrollRight.addEventListener('click', () => {
            scrollContainer.scrollBy({
                left: scrollAmount,
                behavior: 'smooth'
            });
        });

    </script>
